# MongoDB
MONGODB_URI=mongodb://localhost:27017/booking_badminton
# Or MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/booking_badminton?retryWrites=true&w=majority

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
PORT=3000
NODE_ENV=development

# Security
BCRYPT_SALT_ROUNDS=10

# OTP
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_MAX_RESENDS_PER_DAY=5

# Rate Limiting
RATE_LIMIT_REGISTER_MAX=5
RATE_LIMIT_REGISTER_TTL_SECONDS=900
RATE_LIMIT_VERIFY_MAX=10
RATE_LIMIT_VERIFY_TTL_SECONDS=300

# Email (SendGrid)
SENDGRID_API_KEY=your-api-key
EMAIL_FROM=noreply@bookingbadminton.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
